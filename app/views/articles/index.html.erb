<h1>Articles</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <ul>
      <% @articles.each do |article| %>
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= link_to "Edit this article", edit_article_path(article) %></p>
        <p><%= link_to "Delete this article", article_path(article),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this article?" } %></p>
      <% end %>
      </ul>
    </div>
  </div>
</div>

<p><%= link_to "Create a new article", new_path %></p>

